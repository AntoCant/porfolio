<div id="splide" class="splide">
  <div class="splide__track">
    <ul class="splide__list">
      <li class="splide__slide">
        <img src="/assets/images/about.jpg" alt="Imagen 1" />
      </li>
      <li class="splide__slide">
        <img src="/assets/images/about.jpg" alt="Imagen 2" />
      </li>
      <li class="splide__slide">
        <img src="/assets/images/about.jpg" alt="Imagen 3" />
      </li>
    </ul>
  </div>
</div>

<script>
  declare var Splide: any;

  document.addEventListener("DOMContentLoaded", function () {
    new Splide("#splide", {
      type: "loop", // Ciclo infinito
      perPage: 1, // Mostrar una diapositiva a la vez
      autoplay: true, // Activar deslizamiento automático
      interval: 4000, // Intervalo de 5 segundos entre diapositivas
      speed: 1000, // Duración de la transición en milisegundos (1 segundo)
      pauseOnHover: true, // Pausar el deslizamiento cuando se pasa el mouse
    }).mount();
  });
</script>
